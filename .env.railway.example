# Variables de entorno para Railway
# Copia estas variables en la configuración de Railway

# Aplicación
APP_NAME="LoopZ"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://tu-app.up.railway.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos PostgreSQL (Railway te proporciona estas variables automáticamente)
# Solo necesitas agregar estas si Railway no las inyecta automáticamente:
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Sesiones
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Cache
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database
CACHE_STORE=database
CACHE_PREFIX=

# Filesystem - Usar 'public' para almacenamiento local en Railway
# o configurar S3 para almacenamiento persistente
FILESYSTEM_DISK=public

# AWS S3 (Opcional - recomendado para almacenamiento persistente)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_URL=
# AWS_ENDPOINT=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Mail (Configura según tu proveedor)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Spotify API (Opcional)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=

# Scout (Búsqueda)
SCOUT_DRIVER=database
SCOUT_QUEUE=false

# Redis (Opcional - Railway puede proveer esto)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Puerto para Railway (Railway inyecta esto automáticamente)
PORT=8000
